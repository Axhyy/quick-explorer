{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "jsxFactory": "el",
    "lib": [
      "dom",
      "es2020",
      "scripthost"
    ]
  },
  "include": [
    "**/*.ts", "**/*.tsx"
  ]
}
